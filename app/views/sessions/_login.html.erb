<h1>User Login</h1>
<% flash.each do |_, msg| %>
    <%= content_tag :div, msg %>
<% end %>

<%= form_for :session, url: login_path, method: 'post' do |form| %>
    <div>
      <%= form.text_field :email, placeholder: 'Email' %>
      <%= form.password_field :password, placeholder: 'Password' %>
    </div>

    <%= form.submit 'Login' %>
<% end %>
